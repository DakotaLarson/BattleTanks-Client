{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "dom",
            "esnext"
        ],
        "module": "amd",
        "sourceMap": true,
        "outDir": "build",
        "allowJs": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*"
    ], 
}